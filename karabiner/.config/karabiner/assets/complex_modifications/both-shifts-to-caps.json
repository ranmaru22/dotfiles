{
    "title": "Remap L_Shift + R_Shift to Caps",
    "rules": [ {
        "description": "Map L_Shift + R_Shift keys together to Caps Lock",
        "manipulators": [ {
            "type": "basic",
            "from": {
                "key_code": "left_shift",
                "modifiers": {
                    "mandatory": [ "right_shift" ],
                    "optional": [ "any" ]
                }
            },
            "to": [ { "key_code": "caps_lock" } ]
        } ]
    } ]
}
